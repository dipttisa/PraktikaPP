<Page x:Class="PraktikaPP.DopPages.CategoryEditPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PraktikaPP.DopPages"
      mc:Ignorable="d" 
      d:DesignHeight="100" d:DesignWidth="300"
      Title="CategoryEditPage" Background="Lavender">

    <Grid >
        <StackPanel Width="300" Height="100">
            <TextBlock Text="Название категории:" HorizontalAlignment="Center" Margin="0,15,0,5"/>
            <TextBox x:Name="CategoryNameTextBox" Width="300" Margin="0,0,0,10"/>
            <Button Content="Сохранить" Width="100" Click="SaveCategory_Click"/>
        </StackPanel>
    </Grid>
</Page>
