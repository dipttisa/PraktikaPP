<Page x:Class="PraktikaPP.DopPages.ProductEditPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PraktikaPP.DopPages"
      mc:Ignorable="d" 
      d:DesignHeight="200" d:DesignWidth="400"
     Title="Добавить новый продукт"  Background="Lavender">
    <Grid>
        <TextBox x:Name="ProductNameTextBox"  Margin="10,40,10,0" VerticalAlignment="Top" Height="25" Text="Название продукта"/>
        <ComboBox x:Name="CategoryComboBox" Width="250" Margin="112,84,38,0" VerticalAlignment="Top" Height="25" DisplayMemberPath="category_name" SelectedValuePath="id"/>

        <Button Content="Сохранить" HorizontalAlignment="Center" VerticalAlignment="Top" Width="100" Height="30" Margin="0,138,0,0" Click="SaveProduct_Click"/>
        <Label Content="Категория" HorizontalAlignment="Left" Margin="28,84,0,0" VerticalAlignment="Top"/>
    </Grid>

</Page>
