<Page x:Class="PraktikaPP.Pages.ReportPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PraktikaPP.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ReportPage" Background="Lavender">
    <Grid>
        <!-- Добавляем ScrollViewer для прокрутки содержимого -->
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <TextBlock Text="Список платежей" FontSize="20" FontWeight="Bold" Margin="20" HorizontalAlignment="Center"/>
                <ItemsControl x:Name="ReportItemsControl" HorizontalAlignment="Center" Margin="10"/>
                <TextBlock x:Name="TotalSumTextBlock" FontSize="16" HorizontalAlignment="Center" FontWeight="Bold" Margin="10"/>
                <TextBlock x:Name="DiscountTextBlock" FontSize="16" HorizontalAlignment="Center" FontWeight="Bold" Margin="10"/>
                <Button Content="Скачать в Exel" Height="25" Width="120" Click="DonlowdButton_Click" Margin="10"/>
                <Button Content="Вернуться назад" Height="25" Width="120" Click="BackButton_Click" Margin="10"/>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>
