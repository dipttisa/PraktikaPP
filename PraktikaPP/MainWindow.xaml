<Window x:Class="PraktikaPP.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PraktikaPP"
        mc:Ignorable="d"
       Title="Главное меню" Height="450" Width="900" Background="LavenderBlush">
    <DockPanel>
        
        <Menu Background="Lavender" DockPanel.Dock="Top">
            <MenuItem Header="Категории" Click="Categories_Click"/>
            <MenuItem Header="Продукция" Click="Products_Click"/>
